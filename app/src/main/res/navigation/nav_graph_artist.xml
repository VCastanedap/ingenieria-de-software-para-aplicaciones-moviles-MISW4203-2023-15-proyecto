<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/artistFragment">
    <fragment
        android:id="@+id/artistFragment"
        android:name="com.appbajopruebas.vinilos.fragment.ArtistFragment"
        android:label="Artists"
        tools:layout="@layout/fragment_artist" >
        <action
            android:id="@+id/action_artistFragment_to_artistDetailFragment"
            app:destination="@id/artistDetailFragment">
            <argument
                android:name="artistId"
                app:argType="integer"/>
        </action>
    </fragment>
    <fragment
        android:id="@+id/artistDetailFragment"
        android:name="com.appbajopruebas.vinilos.fragment.ArtistDetailFragment"
        android:label="Artist"
        tools:layout="@layout/fragment_artist_detail" >
    </fragment>
</navigation>

